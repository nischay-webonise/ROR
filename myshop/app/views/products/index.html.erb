<table class="table table-hover">
  <thead>
    <tr>
      <th colspan = 2 >Product</th>
      <th colspan = 2 >Info</th>
      <th colspan = 2 >Price</th>
      <th colspan = 2 >Quantitity</th>
    </tr>
  </thead>
<% @products.each do |product| %>
  <tbody>
      <tr>
        <td colspan = 2 ><%= product.name %></td>
        <td colspan = 2 ><%= product.info %></td>
        <td colspan = 2 ><%= product.price %></td>
        <td colspan = 2 ><%= product.quantity %></td>
        <td><%= link_to 'delete' , product_path(product),method: :delete, data: { confirm: 'Are you sure?'} %></td>
        <td colspan = 2 ><%= link_to 'Add to cart' , add_to_cart_order_path(product.id) %></td>
      </tr>
  </tbody>
<% end %>
</table>


